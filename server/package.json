{
  "name": "server",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start:dev": "ts-node-dev --respawn --transpile-only --prefer-ts-exts src/main.ts",
    "build": "tsc -p tsconfig.json",
    "migration:gen": "typeorm-ts-node-commonjs migration:generate -d src/data-source.ts src/migrations/init",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/core": "^10.4.7",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/config": "^3.2.3",
    "@nestjs/typeorm": "^10.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "@types/node": "^22.7.4",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.2"
  }
}
